generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String     @id @default(cuid())
  createdAt DateTime   @default(now())
  runs      ModelRun[]
}

model ModelRun {
  id          String   @id @default(cuid())
  session     Session  @relation(fields: [sessionId], references: [id])
  sessionId   String
  model       String
  prompt      String
  output      String
  tokens      Int
  cost        Float
  createdAt   DateTime @default(now())
}
